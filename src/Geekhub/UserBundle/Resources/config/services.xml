<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

<parameters>
        <parameter key="geekhub_user.oauth_user_provider.class">Geekhub\UserBundle\UserProvider\OAuthUserProvider</parameter>
        <parameter key="geekhub_oauth_user_provider.class">Geekhub\UserBundle\UserProvider\MyFOSUBUserProvider</parameter>
        <parameter key="geekhub_abstract_user_data_service.class">Geekhub\UserBundle\UserProvider\AbstractUserDataService</parameter>
        <parameter key="geekhub_facebook_user_data_service.class">Geekhub\UserBundle\UserProvider\FacebookUserDataService</parameter>
        <parameter key="geekhub_vkontakte_user_data_service.class">Geekhub\UserBundle\UserProvider\VkontakteUserDataService</parameter>
        <parameter key="geekhub_odnoklassniki_user_data_service.class">Geekhub\UserBundle\UserProvider\OdnoklassnikiUserDataService</parameter>
</parameters>

 
<services>
    <service id="geekhub_user.oauth_user_provider" class="%geekhub_user.oauth_user_provider.class%" />

    <service id="geekhub_user.geekhub_abstract_user_data_service" class="%geekhub_abstract_user_data_service.class%" abstract="true">
        <argument type="service" id="service_container" />
        <argument type="string">%kernel.root_dir%</argument>
        <argument type="string">%geekhub_user.image.upload_directory%</argument>
    </service>

    <service id="geekhub_oauth_user_provider" class="%geekhub_oauth_user_provider.class%"> 
     	<argument type="service" id="fos_user.user_manager" />
        <argument type="collection">
         	<argument key="facebook">facebook_id</argument>
         	<argument key="vkontakte">vkontakte_id</argument>
         	<argument key="odnoklassniki">odnoklassniki_id</argument>
        </argument>
            <call method="setFacebookUserDataService">
                <argument type="service" id="geekhub_facebook_user_data_service" />
            </call>
            <call method="setVkontakteUserDataService">
                <argument type="service" id="geekhub_vkontakte_user_data_service" />
            </call>
            <call method="setOdnoklassnikiUserDataService">
                <argument type="service" id="geekhub_odnoklassniki_user_data_service" />
            </call>
    </service>

    <service id="geekhub_facebook_user_data_service" class="%geekhub_facebook_user_data_service.class%" parent="geekhub_user.geekhub_abstract_user_data_service" />

    <service id="geekhub_vkontakte_user_data_service" class="%geekhub_vkontakte_user_data_service.class%" parent="geekhub_user.geekhub_abstract_user_data_service" />

    <service id="geekhub_odnoklassniki_user_data_service" class="%geekhub_odnoklassniki_user_data_service.class%" parent="geekhub_user.geekhub_abstract_user_data_service">
            <call method="setAppKeys">
                <argument type="collection">
                    <argument key="odnoklassniki_app_key">%odnoklassniki_app_key%</argument>
                    <argument key="odnoklassniki_app_secret">%odnoklassniki_app_secret%</argument>
                </argument>
            </call>
    </service>
</services>
</container>
