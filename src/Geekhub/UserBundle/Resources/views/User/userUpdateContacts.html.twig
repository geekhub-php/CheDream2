{% extends "GeekhubResourceBundle::layout.html.twig" %}

{% block title %}Edit profile{% endblock %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('emailIsBusy') %}
        <div class="alert alert-success">
            {{ flashMessage|trans|raw }}
        </div>
    {% endfor %}

    <div style="padding: 5% 0;">
        <form method="POST" enctype="multipart/form-data" action="{{ path('profile_update_contacts') }}">
            <div class="row">
                <div class="col-md-5">
                    <div id="user-avatar-container">
                        <img src="{{ user.avatar|mediaPath|imagine_filter('userAvatarBig') }}" class="img-thumbnail" />
                    </div>
                    {# media avatar, 'big' #}
                    {# form_widget(form.avatar) #}
                </div>
                <div class="col-md-7">
                    <label class="control-label">{{ 'user.first_and_lastname'|trans }}</label>
                    <div class="row">
                        <div class="col-md-6">
                          {{ form_widget(form.firstName) }}
                        </div>
                        <div class="col-md-6">
                          {{ form_widget(form.lastName) }}
                        </div>
                    </div>
                    {# set form.vars.value.email = '' #}
                    {{ form_row(form.email) }}
                    {{ form_rest(form) }}
                    {{ form_errors(form) }}
                    <div class="row center">
                        <input type="submit" name= "_submit" class="btn btn-primary" value="{{ 'user.save'|trans }}">
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock content %}
