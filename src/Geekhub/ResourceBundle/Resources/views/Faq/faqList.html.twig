{% extends 'GeekhubResourceBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        hr {
            margin-top: 0px;
            margin-bottom: 0px;
        }

        .row {
            margin: 5px 0;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="row">
            <div class='span12'>
                <h1 class="text-center">Регламент та поради</h1>
            </div>
        </div>
        <div class="row">

            <div class="tabbable tabs-left">
                <ul class="nav nav-tabs">
                    {% for faq in faqs %}
                        <li {{ faq.slug == slug ? 'class="active"' }}>
                            <a data-toggle="tab" href="{{ path('faq') }}#{{ faq.slug }}">
                                {{ faq.title|striptags }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
                <div class="tab-content">
                    {% for faq in faqs %}
                        <div class="tab-pane {{ faq.slug == slug ? 'active' }}" id="{{ faq.slug }}">
                            <h1>{{ faq.question|striptags }}</h1>
                            <p>
                                {{ faq.answer|raw }}
                            </p>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>
        </div>
        <br/>
    </div>
{% endblock %}
