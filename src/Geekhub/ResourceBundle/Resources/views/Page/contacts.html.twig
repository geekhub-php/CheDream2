{% extends 'GeekhubResourceBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <div class="content page-contacts">
        <div class="col-md-6">
            <h1>{{ 'contacts.feedback'|trans }}</h1>
            <ul class="col-md-12 contact-list">
                <li class="row">
                    <div class="info text-left">
                        <i class="icon icon-phone"></i>
                        (0472) 32-32-32
                    </div>
                    <div class="type text-right">
                        {{ 'contacts.landline'|trans }}
                    </div>
                </li>
                
                <li class="row">
                    <div class="info text-left">
                        <i class="icon icon-life"></i>
                        (093) 333-33-33
                    </div>
                    <div class="type text-right">
                        {{ 'contacts.mobile_life'|trans }}
                    </div>
                </li>
                
                <li class="row">
                    <div class="info text-left">
                        <i class="icon icon-mts"></i>
                        (099) 999-99-99
                    </div>
                    <div class="type text-right">
                        {{ 'contacts.mobile_mts'|trans }}
                    </div>
                </li>
                
                <li class="row">
                    <div class="info text-left">
                        <i class="icon icon-kyivstar"></i>
                        (097) 777-77-77
                    </div>
                    <div class="type text-right">
                        {{ 'contacts.mobile_ks'|trans }}
                    </div>
                </li>
                
                <li class="row">
                    <div class="info text-left">
                        <i class="icon icon-skype"></i>
                        test.test
                    </div>
                    <div class="type text-right">
                        {{ 'contacts.skype'|trans }}
                    </div>
                </li>
                
                <li class="row">
                    <div class="info text-left">
                        <i class="icon icon-icq"></i>
                        999-888-777
                    </div>
                    <div class="type text-right">
                        {{ 'contacts.icq'|trans }}
                    </div>
                </li>
                
                <li class="address row">
                    <div class="info text-left">
                        <i class="icon icon-location"></i>
                        м. Черкаси
                        <br />
                        вул. О. Дашкевича, б. 40
                    </div>
                    <div class="type text-right">
                        {{ 'contacts.address'|trans }}
                    </div>
                </li>
            </ul>
            <div class="map-block col-md-12 text-center">
                <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script><div style="overflow:hidden;height:300px;width:100%;"><div id="gmap_canvas" style="height:300px;width:100%;"></div><a class="google-map-data" href="http://maps-einbinden.com" id="get-map-data">google maps</a><iframe src="http://www.embed-google-map.com/map-embed.php"></iframe><a class="google-map-data" href="http://www.stromleo.de" id="get-map-data">http://www.stromleo.de</a></div><script type="text/javascript"> function init_map(){var myOptions = {zoom:3,center:new google.maps.LatLng(49.42609283832974,32.094713176771506),mapTypeId: google.maps.MapTypeId.ROADMAP};map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions);marker = new google.maps.Marker({map: map,position: new google.maps.LatLng(49.42609283832974, 32.094713176771506)});infowindow = new google.maps.InfoWindow({content:"<div style='position:relative;line-height:1.34;overflow:hidden;white-space:nowrap;display:block;'><div style='margin-bottom:2px;font-weight:500;'>GeekHub Team</div><span>Gorkogo 17 <br>  Cherkassy</span></div>" });google.maps.event.addListener(marker, "click", function(){infowindow.open(map,marker);});infowindow.open(map,marker);}google.maps.event.addDomListener(window, 'load', init_map);</script>
            </div>
        </div> <!--/col-md-6-->
        
        <div class="col-md-6">
            <h2>{{ 'contacts.write_us.title'|trans }}</h2>
            {{  form_start(form) }}
                <ul class="form-block">
                    <li class="input-block row">
                        {{ form_label(form.to) }}
                        {{ form_errors(form.to) }}
                        {{ form_widget(form.to) }}
                    </li>
                    <li class="input-block row">
                        {{ form_label(form.title) }}
                        {{ form_errors(form.title) }}
                        {{ form_widget(form.title) }}
                    </li>
                    <li class="input-block row">
                        {{ form_label(form.body) }}
                        {{ form_errors(form.body) }}
                        {{ form_widget(form.body) }}
                    </li>
                    <li class="input-block captcha-block row">
                        {{ form_label(form.captcha) }}
                        {{ form_errors(form.captcha) }}
                        {{ form_widget(form.captcha) }}
                    </li>
                    <li class="buttons-block row">
                        {{ form_widget(form.submit, { 'attr': {'class': 'custom-btn btn-orange'} }) }}
                    </li>
                </ul>
            {{ form_end(form) }}
        </div>
        <div class="clear"></div>
    </div> <!--/Content-->
{% endblock %}
