<div class="dream-header">
    <div class="poster">
        <img src="{{ dream.mediaPoster|mediaPath|imagine_filter('dream_poster_view_form') }}"/>
    </div>
    {% if dream.mediaVideos|length %}
        <ul class="thumbnails">
            <li class="video">
                {% media dream.mediaVideos.0, 'reference' %}
            </li>
            {% if dream.currentStatus == 'completed' or dream.currentStatus == 'success' %}
                {% for picture in dream.mediaCompletedPictures %}
                    {% if loop.index <= 2%}
                        <li>
                            <a href="{{ picture|mediaPath|imagine_filter('dream_gallery_view') }}" title="{{ picture.name }}">
                                <img src="{{ picture|mediaPath|imagine_filter('dream_pictures_view_form') }}" />
                            </a>
                        </li>
                    {% else %}
                        <li class="hidden">
                            <a href="{{ picture|mediaPath|imagine_filter('dream_gallery_view') }}" title="{{ picture.name }}">
                                <img src="{{ picture|mediaPath|imagine_filter('dream_pictures_view_form') }}" />
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            {% else %}
                {% for picture in dream.mediaPictures %}
                    {% if loop.index <= 2 %}
                        <li>
                            <a href="{{ picture|mediaPath|imagine_filter('dream_gallery_view') }}" title="{{ picture.name }}">
                                <img src="{{ picture|mediaPath|imagine_filter('dream_pictures_view_form') }}" />
                            </a>
                        </li>
                    {% else %}
                        <li class="hidden">
                            <a href="{{ picture|mediaPath|imagine_filter('dream_gallery_view') }}" title="{{ picture.name }}">
                                <img src="{{ picture|mediaPath|imagine_filter('dream_pictures_view_form') }}" />
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            {% endif %}
        </ul>
    {% else %} {#  else media without video #}
        <ul class="thumbnails no-video">
            {% if dream.currentStatus == 'completed' or dream.currentStatus == 'success' %}
                {% for picture in dream.mediaCompletedPictures %}
                    {% if loop.index <= 9 %}
                        <li>
                            <a href="{{ picture|mediaPath|imagine_filter('dream_gallery_view') }}" title="{{ picture.name }}">
                                <img src="{{ picture|mediaPath|imagine_filter('dream_pictures_view_form') }}" />
                            </a>
                        </li>
                    {% else %}
                        <li class="hidden">
                            <a href="{{ picture|mediaPath|imagine_filter('dream_gallery_view') }}" title="{{ picture.name }}">
                                <img src="{{ picture|mediaPath|imagine_filter('dream_pictures_view_form') }}" />
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            {% else %}
                {% for picture in dream.mediaPictures %}
                    {% if loop.index <= 9 %}
                        <li>
                            <a href="{{ picture|mediaPath|imagine_filter('dream_gallery_view') }}" title="{{ picture.name }}">
                                <img src="{{ picture|mediaPath|imagine_filter('dream_pictures_view_form') }}" />
                            </a>
                        </li>
                    {% else %}
                        <li class="hidden">
                            <a href="{{ picture|mediaPath|imagine_filter('dream_gallery_view') }}" title="{{ picture.name }}">
                                <img src="{{ picture|mediaPath|imagine_filter('dream_pictures_view_form') }}" />
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            {% endif %}
        </ul>{#thumbnails#}
    {% endif %}
</div>
