<div class="modal fade" id="dreamCompletedModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Опишіть ваші досягнення.</h4>

            </div>
            <div class="modal-body">

                {{ form_start(completedForm, {'action': path('completed_dream', {'slug': dream.slug}), 'method': 'POST', 'attr': {'role': 'form', 'novalidate': 'novalidate' } } ) }}

                {{ form_row(completedForm.completedDescription) }}
                {{ tinymce_init() }}
                <h5 style="font-weight: bolder;">Додайте нові фотографії</h5>
                <input id="imgUploadCompleted" type="file" name="imgUpl" multiple>

                {{ form_widget(completedForm.dreamPictures) }}
                <br/>
                <div id="completedPicturesContainer"></div>

                <div class="modal-footer">
                    <p class="help-block">* Поле обов'язкове для заповнення</p>
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'dream.cancel'|trans }}</button>
                    <input type="submit" value="{{ 'dream.completed.post'|trans }}" class="btn btn-info">
                </div>

                {{ form_end(completedForm) }}
                <br/>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
