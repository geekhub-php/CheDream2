<div class="row">
    <div class="col-md-4">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED")%}
            {#{% if app.user.id == dream.author.id%}#}
                {#<a href="#" class="btn btn-warning btn-sm" style="margin-top: 60px;">Розпочати збір коштів</a>#}
            {#{% else %}#}
                <h3>Підтримати:</h3>
                <hr class="show-hr">
                <div class="btn-group-vertical" style="width: 100%">
                    <a type="button" class="btn btn-default btn-lg btn-block">Фінансово</a>
                    <div>     {# financial contribute form start #}

                        {{ form_start(finForm, {'attr': {'role': 'form', 'novalidate': 'novalidate' } } ) }}

                        {{ form_row(finForm.financialArticle) }}
                        {{ form_row(finForm.quantity) }}
                        {{ form_row(finForm.hiddenContributor) }}

                        <input type="submit" value="{{ 'dream.support'|trans }}" class="text-center btn btn-primary btn-sm">

                        {{ form_errors(finForm) }}
                        {{ form_rest(finForm) }}
                        {{ form_end(finForm) }}
                        <br/>
                        <br/>
                    </div>    {# financial contribute form end #}
                    <a type="button" class="btn btn-default btn-lg btn-block">Обладнанням / Технікою</a>

                    <div>     {# equipment contribute form start #}

                        {{ form_start(equipForm, {'attr': {'role': 'form', 'novalidate': 'novalidate' } } ) }}

                        {{ form_row(equipForm.equipmentArticle) }}
                        {{ form_row(equipForm.quantity) }}
                        {{ form_row(equipForm.hiddenContributor) }}

                        <input type="submit" value="{{ 'dream.support'|trans }}" class="text-center btn btn-primary btn-sm">

                        {{ form_errors(equipForm) }}
                        {{ form_rest(equipForm) }}
                        {{ form_end(equipForm) }}
                        <br/>
                        <br/>
                    </div>    {# equipment contribute form end #}

                    <a type="button" class="btn btn-default btn-lg btn-block">Провести роботи</a>

                    <div>     {# work contribute form start #}

                        {{ form_start(workForm, {'attr': {'role': 'form', 'novalidate': 'novalidate' } } ) }}

                        {{ form_row(workForm.workArticle) }}
                        {{ form_row(workForm.quantity) }}
                        {{ form_row(workForm.quantityDays) }}
                        {{ form_row(workForm.hiddenContributor) }}

                        <input type="submit" value="{{ 'dream.support'|trans }}" class="text-center btn btn-primary btn-sm">

                        {{ form_errors(workForm) }}
                        {{ form_rest(workForm) }}
                        {{ form_end(workForm) }}
                        <br/>
                        <br/>
                    </div>    {# work contribute form end #}


                    <a type="button" class="btn btn-default btn-lg btn-block">Інша допомога</a>
                </div>
            {#{% endif %}#}
        {% else %}
            <div class="alert alert-warning" style="margin-top: 65px;">Щоб підтримати мрію, Вам потрібно авторизуватися.</div>
        {% endif %}
    </div>

    <div class="col-md-8">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") and app.user.id == dream.author.id%}
        <a href="{{ path('edit_dream', {'slug': dream.slug}) }}" class="pull-right btn btn-warning btn-xs">{{ 'dream.edit'|trans }}</a>
        {% endif %}
        <h2>{{ dream.title }}</h2>

        <div>
            {{ dream.description|raw }}
        </div>
    </div>

</div>
