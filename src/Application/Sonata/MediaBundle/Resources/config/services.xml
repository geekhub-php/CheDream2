<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="media.twig.media_extension.class">Application\Sonata\MediaBundle\Twig\MediaExtension</parameter>
        <parameter key="sonata.media.provider.youtubeOverride.class">Application\Sonata\MediaBundle\Provider\YouTubeProvider</parameter>
    </parameters>

    <services>
        <service id="media.twig.media_extension" class="%media.twig.media_extension.class%">
            <argument type="service" id="sonata.media.pool"/>
            <tag name="twig.extension" />
        </service>

        <service id="sonata.media.provider.youtube" class="%sonata.media.provider.youtubeOverride.class%">
            <tag name="sonata.media.provider" />
            <argument>sonata.media.provider.youtube</argument>
            <argument />
            <argument />
            <argument />
            <argument type="service" id="sonata.media.thumbnail.format" />
            <argument type="service" id="sonata.media.buzz.browser" />
            <argument type="service" id="sonata.media.metadata.proxy" />
            <argument />
            <call method="setTemplates">
                <argument type="collection">
                    <argument key='helper_thumbnail'>SonataMediaBundle:Provider:thumbnail.html.twig</argument>
                    <argument key='helper_view'>SonataMediaBundle:Provider:view_youtube.html.twig</argument>
                </argument>
            </call>
        </service>

    </services>

</container>
